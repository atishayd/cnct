{
  "name": "job-application-automation",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm run start -w backend",
    "start:frontend": "npm run dev -w frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build": "concurrently \"npm run build -w backend\" \"npm run build -w frontend\"",
    "test": "concurrently \"npm run test -w backend\" \"npm run test -w frontend\"",
    "test:setup": "npm run test:setup -w backend"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "mongoose": "^7.8.6",
    "nodemailer": "^6.10.0",
    "openai": "^4.85.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.13.5",
    "@types/nodemailer": "^6.4.17",
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
} 